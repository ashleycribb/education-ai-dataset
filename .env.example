# Canvas LMS Configuration
CANVAS_API_TOKEN=your_canvas_api_token_here
CANVAS_DOMAIN=your_institution.instructure.com

# AITA Platform Configuration (Optional)
AITA_API_ENDPOINT=https://api.aita.education
AITA_API_KEY=your_aita_api_key_here

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Optional: Database Configuration for Analytics
DATABASE_URL=postgresql://user:password@localhost:5432/aita_canvas

# Optional: Redis Configuration for Caching
REDIS_URL=redis://localhost:6379

# Optional: Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=/var/log/aita-canvas-mcp.log

# Security Configuration
CORS_ORIGIN=https://your-aita-domain.com
API_RATE_LIMIT=100
SESSION_SECRET=your_session_secret_here

# North Carolina Specific Configuration
NC_STANDARDS_API_ENDPOINT=https://api.ncdpi.gov/standards
NC_ASSESSMENT_CALENDAR_URL=https://www.dpi.nc.gov/assessment-calendar

# Canvas Webhook Configuration (for real-time updates)
CANVAS_WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT_URL=https://your-server.com/webhooks/canvas

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300

# Feature Flags
ENABLE_NC_STANDARDS_DETECTION=true
ENABLE_DIFFICULTY_ANALYSIS=true
ENABLE_TIME_ESTIMATION=true
ENABLE_PREREQUISITE_DETECTION=true
ENABLE_SUBMISSION_TRACKING=true

# Compliance and Privacy
FERPA_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true