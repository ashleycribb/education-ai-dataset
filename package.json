{
  "name": "aita-canvas-mcp-server",
  "version": "1.0.0",
  "description": "AITA Canvas MCP Server for seamless LMS integration with AI-powered educational analysis",
  "main": "dist/canvas_mcp_server.js",
  "scripts": {
    "build": "tsc canvas_mcp_server.ts --target es2020 --module commonjs --outDir dist --declaration --sourceMap",
    "dev": "ts-node canvas_mcp_server.ts",
    "start": "node dist/canvas_mcp_server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint canvas_mcp_server.ts",
    "lint:fix": "eslint canvas_mcp_server.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "aita",
    "canvas",
    "mcp",
    "education",
    "ai",
    "learning",
    "north-carolina",
    "standards",
    "lms",
    "integration"
  ],
  "author": "AITA Education Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashleycribb/education-ai-dataset.git"
  },
  "bugs": {
    "url": "https://github.com/ashleycribb/education-ai-dataset/issues"
  },
  "homepage": "https://github.com/ashleycribb/education-ai-dataset#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-fetch": "^3.3.2",
    "jsdom": "^23.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "canvas_mcp_server.ts",
      "!dist/**",
      "!node_modules/**"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}